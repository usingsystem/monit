<div class="wrap">
  <% board do %>
    <% board_header do %>
      TOPN报表
    <% end %>
    <% board_content do %>
      <%= tabs [["site", "网站TopN", {:controller => 'site_topn'}], ["host", "主机TopN", {:controller => 'host_topn'}], ["app", "应用TopN", {:controller => 'app_topn'}],["device", "网络TopN", {:controller => 'device_topn'}],["service", "服务TopN", {:controller => 'service_topn'}]], 'site' %>
      <div class="selector-wrap">
        <p class="selector">
          <% dates=[['最近24小时(Last 24 hours)','last24hours'],['今天(Today)','today'],['昨天(Yesterday)','yesterday'],['本周(This Week)','thisweek'],['最近7天(Last 7 days)','last7days'],['本月(This Month)','thismonth'],['最近30天(Last 30 days)','last30days']] %>
          <% dates.each do |d| %>
            <%= link_to d[0] ,{:controller=>:site_topn,:date=>d[1]}, :class => (d[1]==@date ? "selected" : nil) %>
          <% end %>
        </p>
      </div>
      <div class="cloumns columns3 clearfix">
        <div class="column">
          <div class="column-inner">
            <%=render :partial=>"ping"%>
          </div>
        </div>
        <div class="column">
          <div class="column-inner">
            <%=render :partial=>"dns"%>
          </div>
        </div>
        <div class="column column-last">
          <div class="column-inner">
            <%=render :partial=>"http"%>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>



