<div class="wrap clearfix" >
   <div style="float: left;width: 35%;">
    <% if @service_view  and @service_view.rows.size %>
      <%=render :partial => "templates/#{@service_view.template}", :locals => {:view => @service_view  } %>
    <% end %>
  </div>
  <div  class="datagrid" style="float: right;width:60%;">
  <table cellspacing="0">
    <thead>
      <tr>
        <%=th_tag "服务状态"%>
        <%=th_tag "数量"%>
      </tr>
    </thead>
    <tbody>
      <% if @service_status.size > 0 %>
        <% @service_status.each do |status| %>
          <tr>
            <%=td_tag h(status.title) %>
            <%=td_tag h(status.num)%>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
