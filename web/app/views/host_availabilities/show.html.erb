<div class="wrap">
  <% board do %>
    <% board_header do %>
      可用率报表
    <% end %>
    <% board_content do %>
     <%= tabs [["site", "网站", {:controller => 'site_availabilities'}],["host", "主机", {:controller => 'host_availabilities'}],["app", "应用", {:controller => 'app_availabilities'}],["device", "网络", {:controller => 'device_availabilities'}],["service", "服务", {:controller => 'service_availabilities'}]], 'host' %>
      <div class="selector-wrap">
        <p class="selector">
          <% dates=[['最近24小时(Last 24 hours)','last24hours'],['今天(Today)','today'],['昨天(Yesterday)','yesterday'],['本周(This Week)','thisweek'],['最近7天(Last 7 days)','last7days'],['本月(This Month)','thismonth'],['最近30天(Last 30 days)','last30days']] %>
          <% dates.each do |d| %>
            <%= link_to d[0],{:controller=>:host_availabilities,:action=>:show,:date=>d[1],:hostid=>@hostid}, :class => (d[1]==@date? "selected" : nil) %>
          <% end %>
        </p>
        <p class="selector">
          <%@hosts.each do |n| %>
            <%= link_to n.name,{:controller=>:host_availabilities,:action=>:show,:hostid=>n.id,:date=>@date},:class =>(n.id.to_s==@hostid ? "selected" : nil) %>
          <% end %>
        </p>
      </div>
      <div class="datagrid" style="background-color:#FFFFFF;height: 300px;">
          <div style="float: left; width: 30%;padding-top: 70px;">
            <% if @host_status%>
              <%= image_tag status_chart(@host_status), :alt => "#{t("host")}状态统计" %>
            <%end%>
          </div>
          <div style="float: right; width: 70%;">
            <% if @history_view and @history_view.rows.size %>
              <%=render :partial => "templates/#{@history_view.template}", :locals => {:view => @history_view } %>
            <% end %>
          </div>
      </div>
    <% end %>
  <%end%>
</div>

<div class="wrap">
  <% board do %>
    <% board_header do %>
      统计报告
    <% end %>
    <% board_content do %>
      <table class="grid" cellspacing="0">
        <thead>
          <tr>
            <%=th_tag "时间段"%>
            <%=th_tag "正常"%>
            <%=th_tag "宕机"%>
            <%=th_tag "未知"%>
            <%=th_tag "未监控"%>
          </tr>
        </thead>
        <tbody>
          <% if  @stats && @stats.size>0 %>
            <% @stats.each do |stat| %>
              <tr<%= @first_false ? "" : ((@first_false = true) && " class='first'")%>>
                <%=td_tag Time.at(stat["parent_key"].to_i)%>
                <%=td_tag ('%.2f' %(stat["ok"]))+"%"%>
                <%=td_tag ('%.2f' %(stat["critical"]))+"%"%>
                <%=td_tag ('%.2f' %(stat["unknown"]))+"%"%>
                <%=td_tag ('%.2f' %(stat["pending"]))+"%"%>
              </tr>
            <% end %>
          <%else%>
            <tr>
              <%=td_tag " 暂无数据"%>
            </tr>
          <% end %>
        </tbody>
      </table>
    <%end%>
  <% end %>
</div>
